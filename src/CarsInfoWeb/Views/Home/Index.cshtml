@using System.Threading.Tasks
@using CarsInfoWeb.Models
@model CarsInfoWeb.ViewModel.HomeViewModel


@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bar1.jpg" alt="ASP.NET" class="img-responsive" />
            
        </div>
        <div class="item">
            <img src="~/images/bar2.jpg" alt="Visual Studio" class="img-responsive" />
           
        </div>
        <div class="item">
            <img src="~/images/bar3.jpg" alt="Package Management" class="img-responsive" />
           
        </div>
        <div class="item">
            <img src="~/images/bar4.jpg" alt="Microsoft Azure" class="img-responsive" />
           
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section id="lastAdded">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Latest added</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                   

                    @foreach (var car in @Model.modelCar)
                    {
                        <div class="col-md-4">
                            <div class="offer-wrap">
                                
                                            @if (!String.IsNullOrEmpty(car.Picture))
                                            {
                                                <img src="~/users_uploads/@car.UserId/@car.Picture" id="latestCars" />
                                            }
                                            else
                                            {
                                                <img src="~/images/images.png" id="latestCars" />
                                            }
                                            <div class="newCars">
                                                <span class="label label-success">NEW</span>
                                            </div>

                                <div class="padding">
                                    <div id="accordion">
                                        <div class="panel-default">
                                            <div class="panel-heading">
                                                <h2 class="text-center">@car.Make @car.Model </h2>
                                                <button type="button" class="btn btn-info center-block" data-toggle="collapse" data-target="#moreInfo">More information</button>
                                                <div id="moreInfo" class="collapse">
                                                    <b>Mileage: </b>@car.Mileage <br />
                                                    <b>Price: </b>@car.Price <br />
                                                    <b>Style type: </b>@car.Type <br />
                                                    <b>Fuel type: </b>@car.Fuel <br />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                        </div>

                                    </div>
                                    }

                                </div>
                            </div>
        </div>
    </div>

</section>

<hr />

@{await Html.RenderPartialAsync("SearchCarPartial2",Model.modelSearch); }
