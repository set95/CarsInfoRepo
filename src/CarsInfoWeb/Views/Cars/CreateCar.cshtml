@using System.Threading.Tasks
@using CarsInfoWeb.Models
@model CarsInfoWeb.Models.Car

<div class="container">
    <div class="row">
        <br />
        <form asp-controller="Cars" asp-action="CreateCar" asp-antiforgery="true" enctype="multipart/form-data">

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Make: </label>
                <div class="col-sm-10">

                    <select class="selectpicker" asp-for="Make" id="Make" name="Make">
                        <option selected="selected" value="">-------</option>
                        <option value="Audi">Audi</option>
                        <option value="BMW">BMW</option>
                        <option value="Chevrolet">Chevrolet</option>
                        <option value="Mercedes Benz">Mercedes Benz</option>
                        <option value="Porsche">Porsche</option>
                        <option value="Tesla">Tesla</option>
                        <option value="Ferrari">Ferrari</option>
                    </select>

                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Model: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Enter model" asp-for="Model">
                </div>
            </div>
            
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Price: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Enter price" asp-for="Price">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Year: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Enter year" asp-for="Year">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mileage: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Enter Mileage" asp-for="Mileage">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Color: </label>
                <div class="col-sm-10">
                    <select asp-for="Color" asp-items="Html.GetEnumSelectList<Color>()"></select>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Fuel: </label>
                <div class="col-sm-10">
                    <select asp-for="Fuel" asp-items="Html.GetEnumSelectList<Fuel>()"></select>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Type: </label>
                <div class="col-sm-10">
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<CarType>()"></select>
                </div>
            </div>

            <div class="form-group row">
                <label  for="exampleInputFile" class="col-sm-2 col-form-label">Image: </label>
                <div class="col-sm-10">
                    <input type="file" id="pictureFile" name="pictureFile" accept=".png, .jpg, .jpeg .gif" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
             
        </form>
    </div>
</div>
@Html.ValidationSummary()